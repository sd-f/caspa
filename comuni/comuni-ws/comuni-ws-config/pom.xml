<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>foundation.softwaredesign</groupId>
        <artifactId>comuni-ws</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <groupId>foundation.softwaredesign.comuni-ws</groupId>
    <artifactId>comuni-ws-config</artifactId>

    <packaging>pom</packaging>

    <name>${project.artifactId} (Conversations-Config)</name>

    <description>holding maven configuration for conversations modules</description>

    <properties>
        <context.path>comuni-conversations</context.path>
        <tomee.libs.dir>${project.build.directory}/apache-tomee-libs</tomee.libs.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- comuni rest library -->
        <dependency>
            <groupId>foundation.softwaredesign.comuni-ws</groupId>
            <artifactId>comuni-ws-lib</artifactId>
            <version>${comuni.version}</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.deltaspike.core</groupId>
            <artifactId>deltaspike-core-api</artifactId>
            <version>${deltaspike.version}</version>
            <!--            <scope>provided</scope>-->
        </dependency>

        <dependency>
            <groupId>org.apache.deltaspike.modules</groupId>
            <artifactId>deltaspike-data-module-api</artifactId>
            <version>${deltaspike.version}</version>
            <!--            <scope>provided</scope>-->
        </dependency>

        <dependency>
            <groupId>org.apache.deltaspike.modules</groupId>
            <artifactId>deltaspike-jpa-module-api</artifactId>
            <version>${deltaspike.version}</version>
            <!--            <scope>provided</scope>-->
        </dependency>

        <dependency>
            <groupId>org.apache.deltaspike.core</groupId>
            <artifactId>deltaspike-core-impl</artifactId>
            <version>${deltaspike.version}</version>
            <scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.deltaspike.modules</groupId>
            <artifactId>deltaspike-data-module-impl</artifactId>
            <version>${deltaspike.version}</version>
            <scope>runtime</scope>
        </dependency>

    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>../../src/main/config</directory>
                <filtering>true</filtering>
                <targetPath>${project.build.directory}/config</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <!-- Attention new groupId -->
                <groupId>org.apache.tomee.maven</groupId>
                <artifactId>tomee-maven-plugin</artifactId>
                <version>${tomee.version}</version>
                <configuration>
                    <context>${context.path}</context>
                    <path>${project.build.directory}/${project.build.finalName}.war</path>
                    <config>${project.build.directory}/config/tomee</config>
                    <tomeeVersion>${tomee.version}</tomeeVersion>
                    <tomeeClassifier>${tomee.classifier}</tomeeClassifier>
                    <removeDefaultWebapps>true</removeDefaultWebapps>
                    <removeTomeeWebapp>true</removeTomeeWebapp>
                    <reloadOnUpdate>true</reloadOnUpdate>
                    <lib>${tomee.libs.dir}</lib>
                    <classpaths>
                        <classpath>${tomee.libs.dir}/slf4j-api-${slf4j.version}.jar</classpath>
                        <classpath>${tomee.libs.dir}/jul-to-slf4j-${slf4j.version}.jar</classpath>
                        <classpath>${tomee.libs.dir}/logback-classic-${logback.version}.jar</classpath>
                        <classpath>${tomee.libs.dir}/logback-core-${logback.version}.jar</classpath>
                        <classpath>${project.build.directory}/apache-tomee/conf/logging</classpath>
                    </classpaths>
                    <libs>
                        <!-- remove unsed libs -->
                        <lib>remove:myfaces-</lib>
                        <lib>remove:slf4j-jdk14-</lib>
                    </libs>
                    <synchronization>
                        <extensions>
                            <extension>.class</extension>
                            <extension>.html</extension>
                            <extension>.xhtml</extension>
                            <extension>.js</extension>
                            <extension>.css</extension>
                            <extension>.png</extension>
                            <extension>.gif</extension>
                            <extension>.jpg</extension>
                            <extension>.json</extension>
                            <extension>.xml</extension>
                            <!-- if you want to update each time you build with mvn compile -->
                        </extensions>
                    </synchronization>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-libs</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${tomee.libs.dir}</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.eclipse.persistence</groupId>
                                    <artifactId>eclipselink</artifactId>
                                    <version>${eclipselink.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.postgresql</groupId>
                                    <artifactId>postgresql</artifactId>
                                    <version>${postgres.version}</version>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.slf4j</groupId>
                                    <artifactId>slf4j-api</artifactId>
                                    <version>${slf4j.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.slf4j</groupId>
                                    <artifactId>jul-to-slf4j</artifactId>
                                    <version>${slf4j.version}</version>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.reflections</groupId>
                                    <artifactId>reflections</artifactId>
                                    <version>${reflections.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.google.guava</groupId>
                                    <artifactId>guava</artifactId>
                                    <version>${guava.version}</version>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>org.codehaus.jettison</groupId>
                                    <artifactId>jettison</artifactId>
                                    <version>1.3.7</version>
                                </artifactItem>

                                <artifactItem>
                                    <groupId>ch.qos.logback</groupId>
                                    <artifactId>logback-classic</artifactId>
                                    <version>${logback.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ch.qos.logback</groupId>
                                    <artifactId>logback-core</artifactId>
                                    <version>${logback.version}</version>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ch.qos.logback</groupId>
                                    <artifactId>logback-access</artifactId>
                                    <version>${logback.version}</version>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>